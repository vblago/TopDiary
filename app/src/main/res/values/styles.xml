<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:colorButtonNormal">@color/accent</item>
    </style>
    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@color/icons</item>
    </style>

    <style name="BackArrow" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:textColorSecondary">@color/icons</item>
        <item name="android:textColorPrimary">@color/icons</item>
        <item name="colorPrimary">@color/primary</item>
    </style>
</resources>
